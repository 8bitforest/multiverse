# Macro for Unity YAML-based asset files.
[attr]unityyaml merge=unityyamlmerge diff eol=lf

# Macro for all binary files that should use Git LFS.
[attr]lfs -text filter=lfs diff=lfs merge=lfs

# Default to auto-normalized line endings.
*    text=auto

# Unity
*.cginc              text
*.cs                 text diff=csharp
*.shader             text

# Unity YAML
*.mat                unityyaml
*.anim               unityyaml
*.unity              unityyaml
*.prefab             unityyaml
*.asset              unityyaml
*.meta               unityyaml
*.controller         unityyaml

# "physic" for 3D but "physics" for 2D
*.physicMaterial2D   unityyaml
*.physicMaterial     unityyaml
*.physicsMaterial2D  unityyaml
*.physicsMaterial    unityyaml

# Unity LFS
*.cubemap            lfs
*.unitypackage       lfs

# 3D models
*.3dm                lfs
*.3ds                lfs
*.blend              lfs
*.c4d                lfs
*.collada            lfs
*.dae                lfs
*.dxf                lfs
